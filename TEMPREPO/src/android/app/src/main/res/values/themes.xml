    <style name="Theme.Suyu.Main" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/suyu_primary</item>
        <item name="colorOnPrimary">@color/suyu_onPrimary</item>
        <item name="colorPrimaryContainer">@color/suyu_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/suyu_onPrimaryContainer</item>
        <item name="colorSecondary">@color/suyu_secondary</item>
        <item name="colorOnSecondary">@color/suyu_onSecondary</item>
        <item name="colorSecondaryContainer">@color/suyu_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/suyu_onSecondaryContainer</item>
        <item name="colorTertiary">@color/suyu_tertiary</item>
        <item name="colorOnTertiary">@color/suyu_onTertiary</item>
        <item name="colorTertiaryContainer">@color/suyu_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/suyu_onTertiaryContainer</item>
        <item name="colorError">@color/suyu_error</item>
